import je::editor::graphic;

NAME = "灰度化";

public func entry(_: je::graphic::texture)
{
    return true;
}

public func pixel(t: je::graphic::texture, x: int, y: int)
    => (real, real, real, real)
{
    let (r, g, b, a) = tex(t, x, y);
    let lum = 0.3 * r + 0.59 * g + 0.11 * b;

    return (lum, lum, lum, a);
}